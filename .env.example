# Database Configuration (Choose one)

# SQLite (Default)
SQLALCHEMY_DATABASE_URL=sqlite+aiosqlite:///xray_bot_v3.db

# PostgreSQL
# SQLALCHEMY_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/xray_bot_v3

# MySQL / MariaDB
# SQLALCHEMY_DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/xray_bot_v3

# OneBot Configuration
ONEBOT_V11_ACCESS_TOKEN=your_onebot_access_token_here

# QQ Bot Configuration (JSON format)
QQ_BOTS='
[
  {
    "id": "your_bot_id",
    "token": "your_bot_token",
    "secret": "your_bot_secret",
    "intent": {
      "c2c_group_at_messages": true
    }
  }
]
'

# QQ Sandbox Mode
QQ_IS_SANDBOX=true